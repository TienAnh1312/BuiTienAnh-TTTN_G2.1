@{
    var banners = ViewBag.Banners as List<K21CNT2_BuiTienAnh_2110900003.Models.Banner>;
    var products = ViewBag.Products as List<K21CNT2_BuiTienAnh_2110900003.Models.Product>;
}
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">

<body>
<section class="slick-slideshow">

    @foreach (var banner in banners)
    {
        <div class="slick-custom">
            <img src="@banner.Image" class="img-fluid" alt="">
            <div class="slick-bottom">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 col-10">
                            <h1 class="slick-title">@banner.Title</h1>

                            <p class="lead text-white mt-lg-3 mb-lg-5">@banner.SubTitle</p>

                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

<section class="about section-padding">
        <div class="container">
            <div class="row">

                <div class="col-12 text-center">
                    <h2 class="mb-5">Hãy bắt đầu với <span>TA</span> Fashion</h2>
                </div>

                <div class="col-lg-2 col-12 mt-auto mb-auto">
                    <ul class="nav nav-pills mb-5 mx-auto justify-content-center align-items-center" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Về chúng tôi</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-youtube-tab" data-bs-toggle="pill" data-bs-target="#pills-youtube" type="button" role="tab" aria-controls="pills-youtube" aria-selected="true">Cách làm việc?</button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="pills-skill-tab" data-bs-toggle="pill" data-bs-target="#pills-skill" type="button" role="tab" aria-controls="pills-skill" aria-selected="false">Thống kê</button>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-10 col-12">
                    <div class="tab-content mt-2" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

                            <div class="row">
                                <div class="col-lg-7 col-12">
                                    <img src="~/Style/images/header/vuonnho.jpg" class="img-fluid" alt="">
                                </div>

                                <div class="col-lg-5 col-12">
                                    <div class="d-flex flex-column h-100 ms-lg-4 mt-lg-0 mt-5">
                                        <h4 class="mb-3">Mang thiên nhiên vào <br> không gian sống của bạn!</h4>

                                        <p>Chúng tôi cung cấp một loạt các loại cây cảnh đẹp và chất lượng, giúp làm xanh không gian sống và tạo cảm giác thư giãn. Từ những cây để bàn nhỏ nhắn cho đến những cây trang trí lớn.</p>

                                        <p>Khám phá ngay bộ sưu tập cây cảnh tuyệt vời của chúng tôi!</p>

                                        <div class="mt-2 mt-lg-auto">
                                            <a asp-controller="About" asp-action="Index" class="custom-link mb-2">
                                                Xem thêm về chúng tôi
                                                <i class="bi-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="pills-youtube" role="tabpanel" aria-labelledby="pills-youtube-tab">

                            <div class="row">
                                <div class="col-lg-7 col-12">
                                    <div class="ratio ratio-16x9">
                                        <iframe src="https://www.youtube-nocookie.com/embed/f_7JqPDWhfw?controls=0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                    </div>
                                </div>

                                <div class="col-lg-5 col-12">
                                    <div class="d-flex flex-column h-100 ms-lg-4 mt-lg-0 mt-5">
                                        <h4 class="mb-3">Life at Studio</h4>

                                        <p>Over three years in business, We’ve had the chance to work on a variety of projects, with companies</p>

                                        <p>Custom work is branding, web design, UI/UX design</p>

                                        <div class="mt-2 mt-lg-auto">
                                            <a href="contact.html" class="custom-link mb-2">
                                                Work with us
                                                <i class="bi-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="pills-skill" role="tabpanel" aria-labelledby="pills-skill-tab">
                            <div class="row">
                                <div class="col-lg-7 col-12">
                                    <img src="images/cody-lannom-G95AReIh_Ko-unsplash.jpeg" class="img-fluid" alt="">
                                </div>

                                <div class="col-lg-5 col-12">
                                    <div class="d-flex flex-column h-100 ms-lg-4 mt-lg-0 mt-5">
                                        <h4 class="mb-3">What can help you?</h4>

                                        <p>Over three years in business, We’ve had the chance on projects</p>

                                        <div class="skill-thumb mt-3">

                                            <strong>Branding</strong>
                                            <span class="float-end">90%</span>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%;"></div>
                                            </div>

                                            <strong>Design & Stragety</strong>
                                            <span class="float-end">70%</span>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%;"></div>
                                            </div>

                                            <strong>Online Platform</strong>
                                            <span class="float-end">80%</span>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%;"></div>
                                            </div>

                                        </div>

                                        <div class="mt-2 mt-lg-auto">
                                            <a href="products.html" class="custom-link mb-2">
                                                Explore products
                                                <i class="bi-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>

<section class="front-product">
    <div class="container-fluid p-0">
        <div class="row align-items-center">

            <div class="col-lg-6 col-12">
                    <img src="~/Style/images/header/vuonnho.jpg" class="img-fluid" alt="">
            </div>

            <div class="col-lg-6 col-12">
                <div class="px-5 py-5 py-lg-0">

                    <h2 class="mb-4"><span>Cửa hàng</span> Của tôi </h2>

                    <p class="lead mb-4">Luôn sẵn sàng cho bạn điều bạn muốn hãy chọn cho bạn cây cảnh hợp với sở thích của bạn và gia đình.</p>

                    <a asp-area="Customers" asp-controller="Product" asp-action="Index" class="custom-link">
                        Xem thêm sản phẩm
                        <i class="bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="featured-product section-padding">
    <div class="container">
        <div class="row">

            <div class="col-12 text-center">
                <h2 class="mb-5">Sản phẩm mới cập nhật</h2>
            </div>

                @foreach (var item in ViewBag.ProductsCid1 as List<K21CNT2_BuiTienAnh_2110900003.Models.Product>)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <div class="product-thumb">
                            <a asp-area="Customers" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">
                                <img src="~/@item.Image" class="img-fluid product-image" alt="@item.Title" style="height: 25rem; object-fit: cover;">
                            </a>

                            <div class="product-top d-flex">
                                <a href="#" class="bi-heart-fill product-icon ms-auto"></a>
                            </div>

                            <div class="product-info d-flex">
                                <div>
                                    <h5 class="product-title mb-0">
                                        <a asp-area="Customers" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="product-title-link">@item.Title</a>
                                    </h5>
                                    <p class="product-p">@item.Content</p>
                                </div>
                                <small class="product-price text-muted ms-auto">@item.PriceNew</small>
                            </div>
                        </div>
                    </div>
                }
            <div class="col-12 text-center">
                <a asp-area="Customers" asp-controller="Products" asp-action="Index"  class="view-all">View All Products</a>
            </div>

        </div>
    </div>
</section>
</body>
</html>