@model K21CNT2_BuiTienAnh_2110900003.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Danh mục -->
            <div class="form-group">
                <label for="Cid" class="control-label">Danh mục</label>
                <select asp-for="Cid" class="form-control">
                    <option value="">Chọn Danh mục</option>
                    @if (ViewData["Categoriess"] != null)
                    {
                        var categories = ViewData["Categoriess"] as List<SelectListItem>;
                        if (categories != null)
                        {
                            foreach (var category in categories)
                            {
                                <option value="@category.Value">@category.Text</option>
                            }
                        }
                    }
                </select>

                <span asp-validation-for="Cid" class="text-danger"></span>
            </div>

            <!-- Mã sản phẩm -->
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <!-- Tên sản phẩm -->
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Mô tả sản phẩm -->
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Ảnh sản phẩm -->
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Nội dung sản phẩm -->
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!-- Giá cũ sản phẩm -->
            <div class="form-group">
                <label asp-for="PriceOld" class="control-label"></label>
                <input asp-for="PriceOld" class="form-control" />
                <span asp-validation-for="PriceOld" class="text-danger"></span>
            </div>

            <!-- Giá mới sản phẩm -->
            <div class="form-group">
                <label asp-for="PriceNew" class="control-label"></label>
                <input asp-for="PriceNew" class="form-control" />
                <span asp-validation-for="PriceNew" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            
            @* <div class="form-group">
                <label asp-for="MetaTitle" class="control-label"></label>
                <input asp-for="MetaTitle" class="form-control" />
                <span asp-validation-for="MetaTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MetaKeyword" class="control-label"></label>
                <input asp-for="MetaKeyword" class="form-control" />
                <span asp-validation-for="MetaKeyword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MetaDescription" class="control-label"></label>
                <input asp-for="MetaDescription" class="form-control" />
                <span asp-validation-for="MetaDescription" class="text-danger"></span>
            </div> *@


            <div class="form-group">
                <label asp-for="Slug" class="control-label"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
